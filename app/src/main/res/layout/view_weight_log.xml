<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardElevation="@dimen/elevation"
    card_view:contentPadding="@dimen/padding"
    android:layout_margin="@dimen/cardview_calorie_margin"
    android:id="@+id/item_card_view">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/item_view">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/recorded_date"
                android:layout_weight="1"
                android:textSize="@dimen/food_title_font_size"
                android:textStyle="normal|bold"
                android:textColor="@color/primaryText" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                card_view:srcCompat="@drawable/ic_more_vert_black_24dp"
                android:id="@+id/menuButton" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/recorded_weight" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                card_view:srcCompat="@drawable/ic_photo_black_24dp"
                android:id="@+id/photo"
                android:layout_gravity="end" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>